<div class="container" style="max-width: 768px; background-color:#FFFFFF;" >
  <%= image_tag 'news', alt: 'SBR', width: 768 %>
  <section class="section">
    <h1 class="title">最新消息 NEWS</h1>
    <table class="table is-hoverable">
      <thead>
        <tr>
          <th></th>  
          <th>類別</th>
          <th style="width: 450px;">標題</th>
          <th>公告日期</th>
        </tr>
      </thead>
      <tbody>
        <% @pages_ontop.each do |page| %>
          <tr>
            <td><i class="icon ion-pin is-small"></i></td> 
            <td>
              <% if page.classify == "SYSOP" %><span class="tag is-rounded is-danger is-hidden-tablet">系統</span><span class="tag is-rounded is-danger is-hidden-mobile">系統 SYSOP</span>
              <% elsif page.classify == "RACE" %><span class="tag is-rounded is-warning is-hidden-tablet">比賽</span><span class="tag is-rounded is-warning is-hidden-mobile">比賽 RACE</span>
              <% elsif page.classify == "NEWS" %><span class="tag is-rounded is-link is-hidden-tablet">新聞</span><span class="tag is-rounded is-link is-hidden-mobile">新聞 NEWS</span>
              <% elsif page.classify == "AWARD" %><span class="tag is-rounded is-success is-hidden-tablet">得獎</span><span class="tag is-rounded is-success is-hidden-mobile">得獎 AWARD</span>
              <% else %><span class="tag is-rounded is-black is-hidden-tablet">未分類</span><span class="tag is-rounded is-black is-hidden-mobile">未分類 Unkonwn</span><% end %>
            </td>
            <td>
              <%= link_to announcement_path(page) do %>
              <%= page.title %>
              <% end %></td>
            <td><%= page.updated_at.to_time.strftime('%Y.%m.%d') %></td>
          </tr>
        <% end %>
        <% @pages_display.each do |page| %>
          <tr>
            <td></td> 
            <td>
              <% if page.classify == "SYSOP" %><span class="tag is-rounded is-danger is-hidden-tablet">系統</span><span class="tag is-rounded is-danger is-hidden-mobile">系統 SYSOP</span>
              <% elsif page.classify == "RACE" %><span class="tag is-rounded is-warning is-hidden-tablet">比賽</span><span class="tag is-rounded is-warning is-hidden-mobile">比賽 RACE</span>
              <% elsif page.classify == "NEWS" %><span class="tag is-rounded is-link is-hidden-tablet">新聞</span><span class="tag is-rounded is-link is-hidden-mobile">新聞 NEWS</span>
              <% elsif page.classify == "AWARD" %><span class="tag is-rounded is-success is-hidden-tablet">得獎</span><span class="tag is-rounded is-success is-hidden-mobile">得獎 AWARD</span>
              <% else %><span class="tag is-rounded is-black is-hidden-tablet">未分類</span><span class="tag is-rounded is-black is-hidden-mobile">未分類 UNKNOWN</span><% end %>
            </td>
            <td><%= link_to announcement_path(page) do %>
              <%= page.title %>
              <% end %></td>
            <td><%= page.updated_at.to_time.strftime('%Y.%m.%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
